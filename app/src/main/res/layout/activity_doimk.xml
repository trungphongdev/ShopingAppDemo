<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangPasswordAcitvity"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/imgbackdocumentprofile"
        android:layout_width="21dp"
        android:layout_height="16dp"
        android:layout_marginTop="10dp"
        android:onClick="backdoimk"
        android:src="@drawable/angle_double_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txvHosocuatoi"
        android:layout_width="169dp"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/design_border"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="Thay đổi mật khẩu"
        android:textColor="@color/color_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txvHosocuatoi"
        android:gravity="center_horizontal"
        android:padding="16dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:src="@drawable/trang"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Trang2000.bt"
            android:textColor="@color/color_main"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:drawableStart="@drawable/ic_baseline_account_circle_24"
            android:drawablePadding="15dp"
            android:fontFamily="@font/roboto"
            android:hint="Mật khẩu hiện tại"
            android:paddingBottom="15dp"
            android:textColor="@color/color_main"
            android:textColorHint="@color/color_main"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:drawablePadding="15dp"
            android:fontFamily="@font/roboto"
            android:hint="Mật khẩu mới"
            android:paddingBottom="15dp"
            android:textColor="@color/color_main"
            android:textColorHint="@color/color_main"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawableStart="@drawable/ic_baseline_check_24"
            android:drawablePadding="15dp"
            android:fontFamily="@font/roboto"
            android:hint="Nhập lại mật khẩu mới"
            android:outlineSpotShadowColor="@color/color_main"
            android:paddingBottom="15dp"
            android:textColor="@color/color_main"
            android:textColorHint="@color/color_main"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btndoimkcuatoi"
            android:layout_width="162dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/design_trendbanner"
            android:fontFamily="@font/roboto_bold"
            android:text="Cập nhật"
            android:onClick="doimk"
            android:textAllCaps="false" />


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>